<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Home</title>
</head>
<body style="background-image: url('https://source.unsplash.com/AWtfHYmRCP8/1366x768');
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  ">
  <!-- Navigattion -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <div class="container">
      <a href="/" class="navbar-brand">Read<i>it</i></a>
      <button class="navbar-toggler navbar-toggle-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a href="/" class="nav-link"><i class="fas fa-home"></i> Home</a>
          </li>
          <li class="nav-item">
              <a href="profile/<%= name%>" class="nav-link"><span><i class="fas fa-user-alt"></i> Hello, <%= name%> </span></a>
            </li>
          <% if(name !== "Guest") {%>
            <li class="nav-item">
            <form action="/user/logout?_method=DELETE" method="POST">
              <button class="btn btn-outline-danger" type="submit"><i class="fas fa-sign-out-alt"></i> Log Out</button>
            </form>
            </li>
           <% } else { %> 
              <li class="nav-item">
                <a href="/user/login" class="btn btn-outline-danger"><i class="fas fa-fingerprint"></i> Login</a>
              </li>
            <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-4 p-5" style="backdrop-filter: blur(5px);">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto mb-4">
        <h1 class="display-4 mb-4 text-white">Feed</h1>
        <a href="/articles/new" class="btn btn-success"><i class="fas fa-file"></i> New Article</a>

        <% articles.forEach(article => { %>
        <div class="card mt-4">
          <div class="card-body">
            <h3 class="card-title"><%= article.title %></h4>
            <div class="card-subtitle text-muted mb-2">
              posted by: <i style="color: rgb(180, 175, 175); font-weight: 500;"><%= article.createdBy %></i>  at <%= article.createdAt.toLocaleDateString() %>
            </div>
            <div class="card-text mb-2"><%= article.description %></div>
            <a href="articles/<%= article.slug %>" class="btn btn-outline-primary"><i class="fas fa-book-open"></i> Read More</a>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
  <!-- Footer -->
  <footer class="bg-dark text-center text-white text-lg-start mt-2" style="bottom: 0;width: 100%;">
        <div class="container mt-3">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <p class="copyright text-center text-white">Copyright &copy; Abhimanyu 2021</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>